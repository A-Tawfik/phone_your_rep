	<meta property="og:type" content="website" />
	<meta property="og:title" content="{{official_full}}'s Contact Info'" />
	<meta property="og:description" content="Download all of {{official_full}}'s' contact info straight to your phone. Then call them every day." />
	<meta property="og:image" content="'../static/imgs/twitter_meta_card.png') %>" />
	<meta property="fb:app_id" content="1666802596950475" />
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:site" content="@phoneyourrep" />
	<meta name="twitter:creator" content="@prog_code" />
	<meta name="twitter:url" content="http://www.phoneyourrep.com" />
	<meta name="twitter:title" content="Phone Your Rep" />
	<meta name="twitter:description" content="Download all of your representatives' contact info straight to your phone. Then call them every day." />
	<meta name="twitter:image" content="<%= require('./images/twitter_meta_card.png') %>" />
	<meta name="twitter:image:alt" content="U.S. Capitol" />

	<!-- JQuery and Google Maps API-->
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDN47V710PFxcFAGY3Gx6hipg7P3CWcQn8&libraries=places&v=3"></script>
	<script src='https://www.google.com/recaptcha/api.js'></script>

	<!-- Fonts && Font Awesome -->
	<link href="https://fonts.googleapis.com/css?family=Raleway|Open+Sans|Alfa+Slab+One" rel="stylesheet">
	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

	<!-- Google Analytics -->
	<script>
		(function(i, s, o, g, r, a, m) {
			i['GoogleAnalyticsObject'] = r;
			i[r] = i[r] || function() {
				(i[r].q = i[r].q || []).push(arguments)
			}, i[r].l = 1 * new Date();
			a = s.createElement(o),
				m = s.getElementsByTagName(o)[0];
			a.async = 1;
			a.src = g;
			m.parentNode.insertBefore(a, m)
		})(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
		ga('create', 'UA-91187016-1', 'auto');
		ga('send', 'pageview');
