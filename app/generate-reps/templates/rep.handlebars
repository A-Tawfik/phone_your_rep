</head>

<body>
	<div class="wrapper">
		<nav style="position:relative; ">
			<!-- Fix for Deployment -->
			<a href="#" id="logo">Phone Your Rep</a>
		</nav>

		<div class="body-content">
			<div id="root">


				<div data-reactroot="" class="row card-list">
					<div class="col-12 center">
						<div class="card row">
							<div class="col-4">
								<img class="card-photo" src="{{photo}}">

								<div class="card-social">
									{{{socialLink "" url "fa-desktop"}}}
									{{{socialLink "https://www.youtube.com/user/" youtube "fa-youtube-play"}}}
									{{{socialLink "https://www.twitter.com/" twiter "fa-twitter"}}}
									{{{socialLink "https://www.facebook.com/" facebook "fa-facebook"}}}
									{{{socialLink "https://www.instagram.com/" instagram "fa-instagram"}}}
								</div>
							</div>
							<div class="col-8">
								<div class="card-name">
									<h3 class="card-member">{{official_full}}</h3>
									<p class="card-chamber">{{role}}</p>
								</div>
								<div class="card-office-list">
									{{#each office_locations}}
										<div class="card-office">
											<div class="card-office-btn">
												<div class="card-office-btn-office"><i class="fa fa-caret-up fa-white card-office-btn-caret" aria-hidden="true"></i>
													<h1 class="card-office-btn-name font-white">
														{{city}}
													</h1>
												</div>
												<div class="card-office-btn-link"><a class="font-white" href="{{v_card_link}}"><i class="fa fa-arrow-circle-o-down fa-white" aria-hidden="true"></i>Download contact</a></div>
												<div class="spacer"></div>
											</div>
											<div class="card-office-panel row">
												<div class="row">
													<div class="col-6 card-office-panel-phone"><i class="fa fa-phone-square fa-icon fa-fw " aria-hidden="true"></i>
														<p><a href="tel:{{phone}}">{{phone}}</a></p>
													</div>
													<div class="col-6 card-office-panel-office "><i class="fa fa-building fa-icon fa-fw " aria-hidden="true"></i>
														<p>{{ifNull building}}</p>
														<p>{{address}} {{suite}}</p>
														<p>{{city}}{{state}}{{zip}}</p>
													</div>
												</div>
												<div class="row card-office-panel-hours">
													<div class="col-12 ">
														<p class="font-white">Hours: {{hours}}</p>
													</div>
												</div>
											</div>
											<div class="spacer"></div>
										</div>
									{{/each}}
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>

	<footer>
		<a href="https://github.com/kylebutts/phone_your_rep">
			<i class="fa fa-github font-white icon" aria-hidden="true"></i>
		</a>
	</footer>

	<!-- Handlebars -->
	<script type="text/javascript">
	</script>

